<h1><%- title %></h1>
<%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <li>
          <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>

      <form id="updateInventoryForm" class="updateInventoryForm-control" action="/inv/update" method="post">

        <fieldset class="addinventoryFieldset">
          <label>Make<input type="text" value="<%- locals.inv_make %>" placeholder="Toyota" name="inv_make"
              minlength="2" maxlength="50" required></label>
          <label>Model<input type="text" value="<%- locals.inv_model %>" placeholder="Runner" name="inv_model"
              minlength="2" maxlength="50" required></label>
          <label>Year<input type="number" value="<%- locals.inv_year %>" placeholder="2001" name="inv_year" min="1900"
              max="2030" required></label>
          <label>Description
            <textarea placeholder="Introduce a description max 100 characters." name="inv_description" minlength="2"
              maxlength="100" rows="5" cols="50" required><%- locals.inv_description %></textarea>
          </label>
          <label>Image<input type="text" value="/images/vehicles/no-image.png" placeholder="red_mustang.jpg"
              name="inv_image" required></label>
          <label>Thumbnail<input type="text" value="/images/vehicles/no-image-tn.png"
              placeholder="litle_red_mustang.jpg" name="inv_thumbnail" required></label>
          <label>Price<input type="number" value="<%- locals.inv_price %>" placeholder="45000" name="inv_price"
              required></label>
          <label>Miles<input type="number" value="<%- locals.inv_miles %>" placeholder="70000" name="inv_miles"
              required></label>
          <label>Color<input type="text" value="<%- locals.inv_color %>" placeholder="Blue" name="inv_color"
              required></label>
          <label>Classification <%- classifications %></label>
          <button class="btnupdate" type="submit" name="sumbit" disabled>Update Vehicle</button>
          <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
        </fieldset>
        <script src="../../js/inv-update.js"></script>
      </form>